<div class="row" style="overflow: hidden;height:200px;z-index: -1;position: absolute">
    <img src="/images/wallpapers/neural.jpg" style="max-width: 100%;z-index: -1"/>
</div>
<div class="row" style="" ng-init="setup()">
    <div id="main_1" class="slab z-depth-1 col m6 offset-m1" style=" padding:2% !important;margin-top: 12%">

        <h3>
            Guest Speakers
        </h3>

        <ul>
            <li>
                <p>
                    The following speakers will be gracing the event.
                </p>
            </li>
        </ul>

        <input ng-model="query" placeholder="Search for Speaker/Topic/Institute" />
        <ul class="collection">

            <li ng-repeat=" speaker in speakers|filter:query" class="collection-item avatar">
                <img src="{{speaker.img}}" alt="" class="circle" />
                <span class="title">{{speaker.name}}</span> <br />
                <p style="font-size: 80%;">
                    <small>{{speaker.place}}</small>
                    <br />
                   <i> {{speaker.topic}}</i>

                </p>
                <a href="#modal1" class="btn modal-trigger" ng-click="CV(this.speaker)" style="color:white !important;" onclick=" return false">CV</a>

            </li>

        </ul>
    </div>
    <div class="col m3 s12 slab offset-m1 z-depth-1 dates" style="padding: 2% 1% !important;margin-top:12%">
        <h5>Important Dates</h5>
        <table style="margin: 0 !important;padding: 0 !important;">
            <tr>
                <td>
                    Submission of abstracts
                </td>
                <td>
                    {{dates.abstracts}}
                </td>
            </tr>
            <tr>
                <td>
                    Acceptance Notification
                </td>
                <td>
                    {{dates.notification}}
                </td>
            </tr>
            <tr>
                <td>
                    Registration at normal rate
                </td>
                <td>
                    {{dates.normalrate}}
                </td>
            </tr>
            <tr>
                <td>
                    Booking of Accommodation
                </td>
                <td>
                    {{dates.accommodations}}
                </td>
            </tr>
        </table>

    </div>
    <div class="col m3 s12 slab offset-m1 z-depth-1 links" style="padding: 3% 5% !important;">
        <h5>Important Links</h5>
        <ul>
            <li><a href="#/register">Register</a></li>
            <li><a href="#/sciPrograms">Scientific Programs</a></li>
            <li><a href="#/contact">Contact Us</a></li>
            <li><a href="http://www.brsi.in">BRSI</a></li>
            <li><a href="http://www.vit.ac.in">VIT</a></li>
        </ul>
    </div>
</div>
<div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content center" >
        <img  src="{{currentSpeaker.img}}" class="circle" width="33.333%" />
        <h4>{{currentSpeaker.name}}</h4>

        <p>{{currentSpeaker.desc}}</p>
    </div>
    <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-green btn-flat ">Close</button>
    </div>
</div>
<script>

    setTimeout(function(){
        $('.modal-trigger').leanModal();
    },2000);
</script>
<script type="text/javascript">

    window.onload = function () {
        if (window.location.href.indexOf("/#/speakers") == -1) {
            window.location.assign("/#/speakers")
        }


    };
</script>